// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @default(autoincrement()) @id
  created DateTime @default(now())
  updated DateTime @updatedAt

  company String
  name String
  position String
  phone String
  email String @unique
  password String

  gender Gender?

  isActive Boolean @default(true)

  file Files? @relation(fields: [profileImgId], references: [id])
  profileImgId Int? @unique

  role Role @default(USER) 
  token Token?  
}

model Company{
  id    Int  @id @default(autoincrement())
  created DateTime @default(now())
  updated DateTime @updatedAt

  name String @unique 
  isActive Boolean @default(true)
}

model OrdersIamweb{
  id    Int  @id @default(autoincrement())
  created DateTime @default(now())
  updated DateTime @updatedAt

  order_no String @unique
  order_time String
  order_title String
  order_info String @default("")
  orderer_member_code String @default("")
  orderer_name String 
  orderer_email String @default("")
  orderer_phone String @default("")
  delivery_country String @default("") 
  delivery_country_text String @default("")
  payment_pay_type String @default("")
  payment_price_currency String @default("")
  payment_total_price Int @default(0)
  pay_time String @default("")
  options String @default("")

  status OrderStatus @default(ORDER_PAYMENT_OK)
}

model Token{
  id    Int  @id @default(autoincrement())
  created DateTime @default(now())
  updated DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int @unique
  
  token String @unique
}

model Files{
  id    Int  @id @default(autoincrement())
  originalname String 
  encoding String
  mimetype String
  destination String
  filename String
  path String
  size Int
  more01 String
  more02 String
  created DateTime @default(now())
  updated DateTime @updatedAt
  user User?
}

enum OrderStatus{
  ORDER_PAYMENT_OK
  DISPATCH_REQUEST
  DISPATCH_COMPLETE
  CANCEL
  DONE
}

enum Gender{
  M
  F
  X
}

enum Role{
  USER
  ADMIN
  SUPER
}